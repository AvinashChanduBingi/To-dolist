package com.todolist.repo;

import org.springframework.data.jdbc.repository.query.Modifying;
import org.springframework.data.jdbc.repository.query.Query;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.repository.query.Param;

import com.todolist.model.TodoList;

public interface repo extends JpaRepository<TodoList, Integer> {
	
	@Modifying
    @Query("UPDATE TodoList t SET t.completion = :completion WHERE t.id = :id")
    int updateTaskCompletion(@Param("id") Integer id, @Param("completion") boolean completion);

}
